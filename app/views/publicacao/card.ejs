<div class="row card-publicacao">
    <div class="col-4 col-md-4 card-image">
        <img src="<%=publicacoes[i].capa ? /img/+publicacoes[i].capa :'/img/mini-livros.jpg'%>" alt="">
    </div>
    <div class="col-8 col-md-8 card-content">
        <div class="card">
            <div class="card-body">
                <!-- Tab panes -->
                <div class="tab-content text-justify">
                    <div class="tab-pane active" id="home" role="tabpanel">
                        <h6><%=publicacoes[i].titulo%></h6>
                        <p><strong>Autor: </strong><%=publicacoes[i].autor%></p>
                    </div>
                </div>
            </div>
            <a href="/files/publicacoes/<%=publicacoes[i].arquivo%>" class="card-link" style="position: absolute; bottom: 7px; right: 110px;">Donwload</a>
            <a href="#" class="card-link" style="position: absolute; bottom: 7px; right: 20px;" title="Detalhes" data-toggle="modal" data-target="#modalPub<%=publicacoes[i].id%>">Leia mais...</a>
        </div>
    </div>
</div>